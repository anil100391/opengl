// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
#shader vertex
#version 330 core

layout(location = 0) in vec3 position;

uniform mat4 u_M;
uniform mat4 u_V;
uniform mat4 u_P;

// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
void main()
{
    gl_Position = u_P * u_V * u_M * vec4(position, 1.0);
};

// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
#shader fragment
#version 330 core

// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
void main()
{
    gl_FragColor = vec4(1.0);
}

