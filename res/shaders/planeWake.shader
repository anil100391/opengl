// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
#shader vertex
#version 330 core

layout(location = 0) in vec3 position;
layout(location = 1) in vec4 color;

uniform mat4 u_M;
uniform mat4 u_V;
uniform mat4 u_P;

out vec4 v_color;

// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
void main()
{
    gl_Position = u_P * u_V * u_M * vec4(position, 1.0);
    v_color = color;
};

// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
#shader fragment
#version 330 core

in vec4 v_color;

// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
void main()
{
    gl_FragColor = v_color;
}

