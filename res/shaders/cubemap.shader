// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
#shader vertex
#version 330 core

layout(location = 0) in vec3 position;
out vec3 texCoord;

// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
uniform mat4 u_MVP;

// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
void main()
{
    texCoord = position;
    vec4 pos = u_MVP * vec4(position, 1.0);
    gl_Position = pos.xyww;
};

// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
#shader fragment
#version 330 core

out vec4 color;
in vec3 texCoord;

// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
uniform samplerCube skybox;

// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
void main()
{
    color = texture(skybox, texCoord);
}

